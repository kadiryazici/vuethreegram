{
   "compilerOptions": {
      "baseUrl": ".",
      "strict": true,
      "outDir": "dist",
      "lib": ["ES2021"],
      "module": "ESNext",
      "moduleResolution": "node",
      "target": "ES2021",
      "skipLibCheck": true,
      "esModuleInterop": true,
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "paths": {
         "@/*": ["./src/*"]
      }
   },
   "include": ["src/**/*"]
}
