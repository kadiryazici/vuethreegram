{
   "name": "vuegram",
   "scripts": {
      "dev": "rimraf prod && tsc-watch --onSuccess \"cross-env MODE=dev node ./prod/index.js\"",
      "start": "cross-env MODE=prod node ./prod/index.js",
      "build": "rimraf prod && tsc && cd ./client && npm run build:client && npm run move",
      "build:client": "cd ./client && rimraf dist && vite-ssr build",
      "move": "bash scripts/moveDist.sh"
   },
   "dependencies": {
      "@types/express": "^4.17.13",
      "@vue/server-renderer": "^3.2.4",
      "@vueuse/core": "^6.0.0",
      "@vueuse/head": "^0.6.0",
      "axios": "^0.21.1",
      "chalk": "^4.1.2",
      "express": "^4.17.1",
      "fast-glob": "^3.2.7",
      "http-errors": "^1.8.0",
      "node-fetch": "^2.6.1",
      "pinia": "^2.0.0-rc.4",
      "vite-ssr-middleware": "^0.1.8",
      "vue": "^3.2.4",
      "vue-router": "^4.0.11"
   },
   "devDependencies": {
      "@iconify/json": "^1.1.389",
      "@types/http-errors": "^1.8.1",
      "@types/node-fetch": "^2.5.12",
      "@vitejs/plugin-vue": "^1.4.0",
      "@vitejs/plugin-vue-jsx": "^1.1.7",
      "@vue/compiler-sfc": "^3.2.4",
      "cross-env": "^7.0.3",
      "dotenv": "^10.0.0",
      "rimraf": "^3.0.2",
      "sass": "^1.38.0",
      "tsc-watch": "^4.5.0",
      "typescript": "^4.3.5",
      "vite": "^2.5.0",
      "vite-plugin-icons": "^0.6.5",
      "vite-plugin-pages": "^0.17.3",
      "vite-plugin-windicss": "^1.2.7",
      "vite-ssr": "^0.12.1",
      "vue-tsc": "^0.2.3",
      "windicss": "^3.1.7"
   }
}
